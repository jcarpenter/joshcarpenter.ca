{
    "name": "joshcarpenter-2019-site",
    "description": "My website",
    "version": "1.0.0",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/jcarpenter/joshcarpenter-2019-site"
    },
    "scripts": {
        "fetch-covid19-stats": "node utils/fetch-covid19-stats.js && bash utils/push-update.sh",
        "fetch-climate-posts:prep": "rm -rf src/posts/tmp",
        "fetch-climate-posts:clone": "git clone -b exported-posts https://github.com/jcarpenter/climate-research.git src/posts/tmp",
        "fetch-climate-posts:update-posts": "node ./utils/update_climate_posts.js",
        "fetch-climate-posts:move-posts": "cpy 'src/posts/tmp/*' 'src/posts'",
        "fetch-climate-posts:move-images": "cpy 'src/posts/tmp/img/*' 'src/img/posts'",
        "fetch-climate-posts:cleanup": "rm -rf src/posts/tmp",
        "fetch-climate-posts": "run-s fetch-climate-posts:*",
        "clean": "rm -rf _site",
        "sass:dev": "node-sass src/styles -o _site/styles --source-map true --output-style expanded",
        "sass:build": "node-sass src/styles -o _site/styles --output-style compressed",
        "postsass:build": "postcss --no-map '_site/styles/*.css' -u autoprefixer -r",
        "copy:prism": "cpy 'src/styles/prism/**' '_site/styles/prism'",
        "copy:fonts": "cpy 'src/fonts/**' '_site/fonts'",
        "copy:json": "cpy 'js/**/*.json'  '../_site/' --cwd=src --parents",
        "copy:gif": "cpy 'img/**/*.gif' '../_site' --cwd=src --parents",
        "copy:js:third-party": "cpy 'js/third-party/**/*' '../_site/' --cwd=src --parents",
        "copy": "run-p copy:*",
        "js:dev": "cpy 'js/*.js'  '../_site/' --cwd=src --parents",
        "js:build": "npx eslint --fix 'src/js/*.js' && npx babel 'src/js/*.js' --presets minify --out-dir _site/js",
        "html:eleventy": "npx @11ty/eleventy",
        "html:postprocess": "node utils/post_process_html.js",
        "html:pretty": "npx html-beautify --no-preserve-newlines '_site/**/*.html'",
        "html": "run-s html:*",
        "img:svg": "svgo -f src/img -o _site/img",
        "img:jpg-png": "node utils/responsive_images.js",
        "img": "mkdir -p _site/img && run-p img:*",
        "browsersync": "browser-sync start --server '_site' --reload-delay 500 --reload-debounce 500 --watch --no-open --no-notify",
        "watch:css": "onchange 'src/styles/*.scss' -- npm run sass:dev",
        "watch:js": "onchange 'src/js/*.js' -d 500 -- npm run js:dev",
        "watch:json": "onchange 'js/**/*.json' -d 500 -- npm run copy:json",
        "watch:eleventy": "onchange 'config.js' 'src/**/*.{md,njk}' '.eleventy.js' 'utils/*.js' -d 500 -- run-s html:eleventy html:postprocess",
        "watch": "run-p watch:*",
        "serve": "npm run browsersync & npm run watch",
        "dev": "npm run clean && run-p copy sass:dev js:dev html:eleventy img && run-s html:postprocess serve",
        "build": "npm run clean && run-p copy sass:build js:build html:eleventy img && run-s html:postprocess html:pretty"
    },
    "author": "Josh Carpenter <rocarpenca@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^0.10.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "autoprefixer": "^9.7.6",
        "axios": "^0.19.2",
        "babel-preset-minify": "^0.5.1",
        "browser-sync": "^2.26.7",
        "cheerio": "^1.0.0-rc.3",
        "child-process": "^1.0.2",
        "colors": "^1.4.0",
        "cpy-cli": "^3.1.0",
        "del": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "fs": "0.0.1-security",
        "fs-extra": "^9.0.0",
        "globby": "^11.0.0",
        "html-minifier": "^4.0.0",
        "js-beautify": "^1.11.0",
        "luxon": "^1.22.0",
        "markdown-it": "^10.0.0",
        "markdown-it-anchor": "^5.2.5",
        "markdown-it-attrs": "^3.0.1",
        "markdown-it-bracketed-spans": "^1.0.1",
        "markdown-it-div": "^1.1.0",
        "markdown-it-header-sections": "^1.0.0",
        "markdown-it-implicit-figures": "^0.9.0",
        "markdown-it-mark": "^3.0.0",
        "markdown-it-sub": "^1.0.0",
        "markdown-it-sup": "^1.0.0",
        "node-sass": "^4.13.1",
        "npm-run-all": "^4.1.5",
        "nunjucks-date-filter": "^0.1.1",
        "onchange": "^6.1.1",
        "path": "^0.12.7",
        "postcss-cli": "^7.1.0",
        "rimraf": "^3.0.0",
        "sharp": "^0.23.4",
        "svgo": "^1.3.2",
        "uslug": "^1.0.4"
    },
    "dependencies": {
        "apexcharts": "^3.17.0",
        "debug": "^4.1.1"
    }
}
