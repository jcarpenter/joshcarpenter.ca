{
    "name": "joshcarpenter-2019-site",
    "description": "Personal site of Josh Carpenter, containing design portfolio, research notes, and blog posts",
    "version": "1.0.0",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/jcarpenter/joshcarpenter-2019-site"
    },
    "scripts": {
        "fetch-covid19-stats": "node utils/fetch-covid19-stats.js && bash utils/old/push-update.sh",
        "fetch-climate-notes:prep": "rm -rf src/notes/tmp",
        "fetch-climate-notes:clone": "git clone -b exported https://github.com/jcarpenter/climate-research.git src/notes/tmp",
        "fetch-climate-notes:update-notes": "node utils/fetch-climate-posts/update-notes.js",
        "fetch-climate-notes:move-notes": "cpy 'src/notes/tmp/*' 'src/notes'",
        "fetch-climate-notes:move-images": "node utils/fetch-climate-posts/move-images.js",
        "fetch-climate-notes:cleanup": "rm -rf src/notes/tmp",
        "fetch-climate-notes": "run-s fetch-climate-notes:*",
        "clean": "rm -rf _site",
        "sass": "sass src/styles:_site/styles --no-error-css --update --style=expanded",
        "copy:prism": "cpy 'src/styles/prism/**' '_site/styles/prism'",
        "copy:fonts": "cpy 'src/fonts/**' '_site/fonts'",
        "copy:json": "cpy 'js/**/*.json'  '../_site/' --cwd=src --parents",
        "copy:js:third-party": "cpy 'js/third-party/**/*' '../_site/' --cwd=src --parents",
        "copy": "run-p copy:*",
        "js:dev": "cpy 'js/*.js'  '../_site/' --cwd=src --parents",
        "js:build": "npx eslint --fix 'src/js/*.js' && npx babel 'src/js/*.js' --presets minify --out-dir _site/js",
        "eleventy": "npx @11ty/eleventy --quiet",
        "img:svg": "svgo --folder src/img/ --output _site/img/ --quiet",
        "img:bitmaps": "cpy 'src/img/**' '!src/img/*.svg' _site/img/",
        "img": "run-p img:svg img:bitmaps",
        "browsersync": "browser-sync start --server '_site' --watch --reload-delay 200 --reload-debounce 2000 --no-open --no-notify --no-ghost-mode",
        "watch:css": "onchange 'src/styles/*.scss' -d 250 -- npm run sass",
        "watch:js": "onchange 'src/js/*.js' -d 250 -- npm run js:dev",
        "watch:json": "onchange 'js/**/*.json' -d 250 -- npm run copy:json",
        "watch:eleventy": "onchange 'config.js' 'src/**/*.{md,njk}' '.eleventy.js' 'utils/**/*.js' -d 250 -- npm run eleventy",
        "watch": "run-p watch:*",
        "serve": "npm run browsersync & npm run watch",
        "dev": "npm run clean && run-p copy img sass js:dev && run-s eleventy serve",
        "build": "npm run clean && run-p copy img sass js:build && run-s eleventy"
    },
    "author": "Josh Carpenter <rocarpenca@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-img": "^0.10.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.2",
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.9.0",
        "autoprefixer": "^9.7.6",
        "axios": "^0.19.2",
        "babel-preset-minify": "^0.5.1",
        "browser-sync": "^2.26.7",
        "cheerio": "^1.0.0-rc.3",
        "child-process": "^1.0.2",
        "citeproc": "^2.4.59",
        "colors": "^1.4.0",
        "cpy-cli": "^3.1.0",
        "debug": "^4.1.1",
        "del": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-google": "^0.14.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "fs": "0.0.1-security",
        "fs-extra": "^10.0.0",
        "globby": "^11.0.0",
        "html-minifier": "^4.0.0",
        "image-size": "^1.0.0",
        "install": "^0.13.0",
        "js-beautify": "^1.11.0",
        "luxon": "^1.22.0",
        "markdown-it": "^12.2.0",
        "markdown-it-anchor": "^8.3.1",
        "markdown-it-attrs": "^4.0.0",
        "markdown-it-bracketed-spans": "^1.0.1",
        "markdown-it-div": "^1.1.0",
        "markdown-it-header-sections": "^1.0.0",
        "markdown-it-implicit-figures": "^0.10.0",
        "markdown-it-mark": "^3.0.1",
        "markdown-it-sub": "^1.0.0",
        "markdown-it-sup": "^1.0.0",
        "npm": "^7.24.0",
        "npm-run-all": "^4.1.5",
        "nunjucks-date-filter": "^0.1.1",
        "onchange": "^7.1.0",
        "path": "^0.12.7",
        "prettier": "^2.4.1",
        "rimraf": "^3.0.0",
        "sass": "^1.42.1",
        "sharp": "^0.29.1",
        "slugify": "^1.6.0",
        "svgo": "^2.6.1",
        "xml-js": "^1.6.11"
    },
    "dependencies": {
        "apexcharts": "^3.17.0"
    }
}
