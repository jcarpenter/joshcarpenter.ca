                    </li>
                    <li class="body-text">
                        <a href="/firefox-os/">Firefox OS</a>
                    </li>
                    <li class="body-text">
                        <a href="/home-automation/">Home Automation</a>
                    </li>
                    <li class="body-text">
                        <a href="/stadium-control/">Stadium Control Center</a>
                    </li>
                </ul>
            </section>

            <section id="climate">
                <h2 class="body-text">Climate Notes</h2>
                <ul>
                    {%- for post in collections.climate -%}
                        <li class="body-text">
                            <a href="{{ post.url }}">{{ post.data.title }}</a>
                        </li>
                    {%- endfor -%}
                </ul>
            </section>

