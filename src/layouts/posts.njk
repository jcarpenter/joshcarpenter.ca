<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="author" content="{{ josh.name }}"/>
        <meta name="copyright" content="Copyright Â© {{ date | date("YYYY") }}, {{ josh.name }}"/>
        <meta name="dcterms.date" content="{{ modified }}"/>
        <title>{{ title }}</title>
        <link rel="stylesheet" href="/styles/style.css">
        <link rel="stylesheet" href="/styles/prism/prism-duotone-light.css"/>
        <script src="/js/fit-images.js"></script>
        <script src="/js/blur-notes.js"></script>
        {# <script type="text/javascript" src="/js/hover-citation.js"></script> #}
        {# <script type="text/javascript" src="/js/toggle-grid.js"></script> #}
    </head>
    <body>
        {% include "header.njk" %}
        <main>
            <article>
                <header id="title-block-header">
                    {% if tags.includes("climate") %}
                        <span class="tag">Climate</span>
                    {% endif %}
                    <h1 class="title">{{ title }}</h1>
                    <address>
                        By <a href="https://twitter.com/{{ josh.twitter }}">{{ josh.name }}</a><br/>
                        Updated <time datetime="{{ modified }}">{{ modified | date("D MMM YYYY") }}</time>
                    </address>
                </header>
                {{ content | safe }}
                {% include "footer.njk" %}
            </article>
        </main>
    </body>
</html>