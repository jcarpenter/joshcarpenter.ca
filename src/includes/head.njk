<!-- Styles -->
{% for file in css %}
    <link rel="stylesheet" href="/styles/{{ file }}">
{% endfor %}

<!-- Scripts -->
{% for script in js %}
    <script {% if script.type == 'module'%}type="module" {% endif %}src="/js/{{ script.file }}"></script>
{% endfor %}