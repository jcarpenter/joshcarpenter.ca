<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

{# Do NOT interpret number sequences as phone numbers, on mobile devices. #}
<meta name="format-detection" content="telephone=no">

{# 
By default, meta.page_title default is same as meta.site_title.
It is (optionally) over-ridden by templates or data files.
#}
<title>{{ meta.page_title }}</title>

{# Meta.summary works same as meta.page_title (see notes above). #}
<meta name="description" content="{{ meta.summary }}">

{# Tell browser which color themese are supported on the page #}
{# {% if dark_mode_only %}
    <meta name="color-scheme" content="dark">
{% elif light_mode_only %}
    <meta name="color-scheme" content="light">
{% else %}
    <meta name="color-scheme" content="dark light">
{% endif %} #}
<meta name="color-scheme" content="dark light">

{# Hide post from SEO if front matter `tags` includes 'hide' #}
{% if tags and tags.includes("hide") %}
    <meta name="robots" content="noindex">
{% endif %}

<meta name="dcterms.date" content="{{ page.date | date("YYYY-MM-DD") }}"/>

{% if meta.add_social_tags %}
    <!-- Social -->
    <meta property="og:type" content="{{ meta.type }}">
    <meta property="og:title" content="{{ meta.page_title }}">
    <meta property="og:url" content="{{ meta.url }}{{ page.url }}">
    <meta property="og:description" content="{{ meta.summary }}">
    {# Meta.image works same as meta.page_title (see notes above). #}
    <meta property="og:image" content="{{ meta.image }}">
    <meta property="og:updated_time" content="{{ page.date | date("YYYY-MM-DD") }}">
    <meta property="article:modified_time" content="{{ page.date | date("YYYY-MM-DD") }}">
    <meta property="og:site_name" content="{{ meta.site_title }}">
    <meta property="og:locale" content="en_US">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@{{ bio.twitter }}">
    <meta name="twitter:creator" content="@{{ bio.twitter }}">
{% endif %}

