<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{# Do NOT interpret number sequences as phone numbers, on mobile devices. #}
<meta name="format-detection" content="telephone=no">

{% if title %}
    <title>{{ title }} | Josh Carpenter - Portfolio and Notes</title>
{% else %}
    <title>{{ config.site_name }}</title>
{% endif %}


{# Get summary from (optional) `summary` front matter field. 
If it does not exist, use default from config  #}
{% if summary %}
    <meta name="description" content="{{ summary }}">
{% else %}
    <meta name="description" content="{{ config.meta.summary }}">
{% endif %}

{# Tell browser which color themese are supported on the page #}
<meta name="color-scheme" content="dark light">

{# Hide post from SEO if front matter `tags` includes 'hide' #}
{% if tags and tags.includes("hide") %}
    <meta name="robots" content="noindex">
{% endif %}

<meta name="dcterms.date" content="{{ page.date | date("YYYY-MM-DD") }}"/>

{% if social.addTags %}
    <!-- Social -->
    <meta property="og:type" content="{{ social.type }}">

    <meta property="og:title" content="{{ title }}">

    <meta property="og:url" content="{{ config.meta.url }}{{ page.url }}">

    {# Get summary from (optional) `summary` front matter field. If it does not exist, use default from config  #}
    {% if summary %}
        <meta property="og:description" content="{{ summary }}">
    {% else %}
        <meta property="og:description" content="{{ config.meta.summary }}">
    {% endif %}

    {# NOTE: og:image will be set of transform #}

    <meta property="og:updated_time" content="{{ page.date | date("YYYY-MM-DD") }}">
    <meta property="article:modified_time" content="{{ page.date | date("YYYY-MM-DD") }}">
    <meta property="og:site_name" content="{{ config.meta.site_name }}">
    <meta property="og:locale" content="en_US">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@{{ config.bio.twitter }}">
    <meta name="twitter:creator" content="@{{ config.bio.twitter }}">
{% endif %}
